<h1>Task Manager</h1>

<%# check_box_tag %>

<ul>
  <% @tasks.each do |t| %>
    <% if t.completed %>
      <li> <input type = "checkbox" checked> <%= link_to t.title, task_path(t.id) %></li>
    <% else %>
      <li> <input type = "checkbox"> <%= link_to t.title, task_path(t.id) %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
